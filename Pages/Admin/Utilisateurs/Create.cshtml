@page
@model WebApplication.Pages.Admin.Utilisateurs.CreateModel

@{
    ViewData["Title"] = "Crée un utilisateur";
}

<h1>@ViewData["Title"]</h1>

<h4>Nouvelle Utilisateur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Utilisateur.Nom" class="control-label"></label>
                <input asp-for="Utilisateur.Nom" class="form-control" />
                <span asp-validation-for="Utilisateur.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.Prenom" class="control-label"></label>
                <input asp-for="Utilisateur.Prenom" class="form-control" />
                <span asp-validation-for="Utilisateur.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.Telephone" class="control-label"></label>
                <input asp-for="Utilisateur.Telephone" class="form-control" />
                <span asp-validation-for="Utilisateur.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.Email" class="control-label"></label>
                <input asp-for="Utilisateur.Email" class="form-control" />
                <span asp-validation-for="Utilisateur.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilisateur.Password" class="control-label"></label>
                <input asp-for="Utilisateur.Password" class="form-control" />
                <span asp-validation-for="Utilisateur.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crée" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
