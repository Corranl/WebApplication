@page
@model WebApplication.Pages.Admin.Utilisateurs.DeleteModel

@{
    ViewData["Title"] = "Suprimer";
}

<h1>@ViewData["Title"]</h1>

<h3>Etes vous sur de vouloir supprimer cette utilisateur ?</h3>
<div>
    <h4>Utilisateur</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Telephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Password)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Utilisateur.Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retour à la liste</a>
    </form>
</div>
