@page
@model WebApplication.Pages.DroitUtilisateur.Produits.DeleteModel

@{
    ViewData["Title"] = "Suprimer un Produit";
}

<h1>@ViewData["Title"]</h1>

<h3>Etes vous sur de supprimer ce Produit ?</h3>
<div>
    <h4>@ViewData["Produit.Id"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Reference)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Reference)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Quantite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Quantite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.PrixUnitaire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.PrixUnitaire)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.PrixCarton)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.PrixCarton)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Millesime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Millesime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Volume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Volume)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Produit.Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./IndexP">Annuler</a>
    </form>
</div>
